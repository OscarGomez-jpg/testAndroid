<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PruebaMaquetacion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gardens_by_the_bay</item>
        <item name="colorPrimaryVariant">@color/gardens_by_the_bay</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- titles settings -->
    <style name="text_title">
        <!-- Margin -->
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>

        <!-- background shape & color -->
        <item name="background">@drawable/rounded_corner_view</item>
        <item name="backgroundTint">@color/gardens_by_the_bay</item>
        <item name="elevation">@dimen/cardview_default_radius</item>

        <!-- text style -->
        <item name="color">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- average text settings -->
    <style name="text_container">
        <!-- Margin -->
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>

        <!-- padding -->
        <item name="android:padding">7dp</item>

        <!-- background shape & color -->
        <item name="background">@drawable/rounded_corner_view</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">@dimen/cardview_default_radius</item>

        <!-- text style -->
        <item name="android:text">@string/jardines_junto_al_lago_desc</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>